<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.scp.hibernate.sample.Employee" table = "emp_info">
     
      <id name = "empId" type = "int" column = "emp_id"></id>
      
      <property name = "empName" column = "emp_name" type = "string"/>
      <property name = "empAddress" column = "emp_address" type = "string"/>
      <property name = "empSalary" column = "emp_salary" />
      
   </class>
</hibernate-mapping>